# Enable JavaScript modules MIME type
AddType application/javascript .js
AddType application/javascript .mjs
AddType text/javascript .js
AddType text/javascript .mjs

# Handle JSON files
AddType application/json .json

# Handle Markdown files
AddType text/markdown .md
AddType text/plain .md

# Handle routing for SPA, but exclude /content directory
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Allow direct access to content directory
    RewriteCond %{REQUEST_URI} ^/content/.*
    RewriteRule ^(.*)$ - [L]
    
    # Handle SPA routing for everything else
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-l
    RewriteRule . /index.html [L]
</IfModule>

# Set security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, OPTIONS, HEAD"
    Header always set Access-Control-Allow-Headers "*"
    Header always set Access-Control-Expose-Headers "*"
    
    Header add Link "</assets/index.[hash].css>; rel=preload; as=style"
    Header add Link "</assets/index.[hash].js>; rel=preload; as=script"
    
    <FilesMatch "\.(js|mjs)$">
        Header set Content-Type "application/javascript"
    </FilesMatch>

    # Set headers for markdown files
    <FilesMatch "\.(md)$">
        ForceType text/plain
        Header set Content-Type "text/plain"
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>
</IfModule>

# Handle other common web files
AddType text/css .css
AddType image/svg+xml .svg
AddType image/png .png
AddType image/jpeg .jpg .jpeg
AddType image/gif .gif
AddType application/font-woff2 .woff2
AddType application/font-woff .woff

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml text/markdown
</IfModule>

# Configure content directory
<Directory "/content">
    Options +Indexes +FollowSymLinks +MultiViews
    AllowOverride All
    Require all granted
    
    <IfModule mod_autoindex.c>
        IndexOptions FancyIndexing HTMLTable NameWidth=* DescriptionWidth=* SuppressRules
        IndexIgnore .htaccess
    </IfModule>
</Directory>

# Handle OPTIONS requests for CORS
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule> 