# Enable RewriteEngine
RewriteEngine On
RewriteBase /

# If the request is not for a file or directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Send everything to index.html
RewriteRule . /index.html [L]

# Basic security headers
Header set X-Content-Type-Options "nosniff"
Header always set Access-Control-Allow-Origin "*"

# Basic file types
AddType application/javascript .js
AddType text/css .css
AddType text/plain .md

# Prevent directory listing
Options -Indexes

# Enable JavaScript modules MIME type
AddType application/javascript .mjs
AddType text/javascript .js
AddType text/javascript .mjs

# Handle JSON files
AddType application/json .json

# Handle Markdown files
AddType text/markdown .md
AddType text/plain .md

# Handle routing for SPA, but exclude /content directory
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} ^/content/.*
    RewriteRule ^(.*)$ - [L]
    
    # Handle SPA routing for everything else
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-l
    RewriteRule ^ index.html [QSA,L]
</IfModule>

# Set security headers and caching
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Cache control for static assets
    <FilesMatch "\.(css|js|mjs|jpg|jpeg|png|gif|ico|svg|woff|woff2)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
    
    # No cache for HTML and Markdown
    <FilesMatch "\.(html|md)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>

    # Set headers for markdown files
    <FilesMatch "\.(md)$">
        ForceType text/plain
        Header set Content-Type "text/plain; charset=UTF-8"
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>
</IfModule>

# Handle other common web files
AddType image/svg+xml .svg
AddType image/png .png
AddType image/jpeg .jpg .jpeg
AddType image/gif .gif
AddType application/font-woff2 .woff2
AddType application/font-woff .woff

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml text/markdown
</IfModule>

# Configure content directory
<Directory "/content">
    Options +Indexes +FollowSymLinks +MultiViews
    AllowOverride All
    Require all granted
    DirectoryIndex disabled
    
    <IfModule mod_headers.c>
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </IfModule>
</Directory>

# Handle OPTIONS requests for CORS
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# Handle errors
ErrorDocument 404 /index.html
ErrorDocument 500 "<h1>Internal Server Error</h1><p>Please try refreshing the page. If the problem persists, contact support.</p>"

# Cache control
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType text/html "access plus 1 day"
    ExpiresByType application/xhtml+xml "access plus 1 day"
</IfModule> 